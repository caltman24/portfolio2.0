---
import { Icon } from "astro-icon/components";

export interface Props {
  title: string;
  icon: string;
  description: string;
}

const { title, icon, description } = Astro.props;
---

<div class="flex flex-col gap-1">
  <Icon name={icon} class="w-9 h-9 text-brand" title={`${title} Icon`} />
  <h4 class="text-lg font-bold">{title}</h4>
  <p class="text-text-dark mt-1">{description}</p>
</div>
