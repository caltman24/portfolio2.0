---
export interface Props {
  text: string;
  className?: string;
}

const { text, className } = Astro.props;
---

<button
  type="button"
  role="button"
  aria-label={text}
  tabindex="0"
  class=`px-4 py-2 transition:all duration-150 rounded-sm hover:brightness-90 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 ${className || ''}`
  >{text}</button
>
